!!!
%html
  %head
    %title Nicholas Caged
    %meta{:charset => "utf-8"}
      %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
        %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
        = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
        = javascript_include_tag 'application', 'data-turbolinks-track' => true
        = csrf_meta_tags
  %body
    #wrap
      %header.masthead
        / Carousel
        #myCarousel.carousel.slide
          / Indicators
          %ol.carousel-indicators
            %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
            %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
            %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
          .carousel-inner
            .item.active
              %img{:src => "/assets/pic1.jpg"}/
              .container
                .carousel-caption
                  %h2 pic1
                  %p
            .item
              %img{:src => "/assets/pic2.jpg"}/
              .container
                .carousel-caption
                  %h2 pic2
                  %p
            .item
              %img{:src => "/assets/pic3.jpg"}/
              .container
                .carousel-caption
                  %h2 pic3
                  %p
          / /.carousel-inner
          .logo Nicholas Caged
          / Controls
          %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
            %span.glyphicon.glyphicon-chevron-left
          %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
            %span.glyphicon.glyphicon-chevron-right
        / /.carousel
      / Fixed navbar
      #nav.navbar.navbar-custom.navbar-inverse.navbar-static-top
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
          .collapse.navbar-collapse
            %ul.nav.navbar-nav.nav-justified
              %li
                =link_to root_path do
                  %i.glyphicon.glyphicon-home
              %li
                =link_to posts_path(@posts) do
                  %i.glyphicon.glyphicon-pencil
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#section3"}
                  %i.glyphicon.glyphicon-book
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "#"} Chap. 1
                  %li
                    %a{:href => "#"} Chap. 2
                  %li
                    %a{:href => "#"} Chap. 3
                  %li
                    %a{:href => "#"} Chap. 4
                  %li
                    %a{:href => "#"} Chap. 5
                  %li
                    %a{:href => "#"} Chap. 6
              / %li
              /   %a{:href => "#section4"} button4
              %li
                =link_to contact_index_path do
                  %i.glyphicon.glyphicon-user
          / /.nav-collapse
        / /.container
      / /.navbar
    = yield
